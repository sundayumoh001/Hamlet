    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/employees_profile_picture"
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#2A7CF8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/employees_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Boniface Bassey"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintLeft_toRightOf="@id/employees_profile_picture"
            app:layout_constraintTop_toTopOf="@id/employees_profile_picture" />

        <TextView
            android:id="@+id/employee_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:gravity="center_horizontal"
            android:text="Android Developer"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/employees_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/employees_name" />


